@model BAP.DAL.Entities.BlogPost

<div class="form-group">
    @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter title" } })
    </div>
    @Html.LabelFor(model => model.ShortDescription, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.MainImageUrl, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @if (Model != null && !string.IsNullOrWhiteSpace(Model.MainImageUrl))
        {
            <img src="/file/@Model.MainImageUrl" width="400px" />
        }
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-10 col-sm-10">
        @Html.Raw(Model.Text)
    </div>
</div>
