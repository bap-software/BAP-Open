@using BAP.Resources
@using BAP.eCommerce.Resources
@model BAP.DAL.Entities.Organization
@{
    ViewBag.Title = Resources.EntityLabel_Organization + " " + Resources.UIText_Details;
    var currentTab = "details";
    if (ViewBag.CurrentTab != null)
    {
        currentTab = (string)ViewBag.CurrentTab;
    }
}

<!-- begin page-header -->
<h1 class="page-header">
    <a href="@Url.Action("Edit", new { Area = "Administration", Id = Model.Id})" class="btn btn-default btn-default btn-success" title="@Resources.UIText_Edit"><i class="glyphicon glyphicon-edit"></i></a>
    @Resources.EntityLabel_Organization<small></small>
</h1>
<!-- end page-header -->
<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                </div>
                <h4 class="panel-title">@ViewBag.Title</h4>
                <!-- begin nav-tabs -->
                <div class="tab-overflow">
                    <ul class="nav nav-tabs nav-tabs-inverse">
                        <li class="prev-button"><a href="javascript:;" data-click="prev-tab" class="text-success"><i class="fa fa-arrow-left"></i></a></li>
                        <li class="@(currentTab == "details" ? "active" : "")"><a href="#nav-tab-1" data-toggle="tab"><i class="glyphicon glyphicon-list"></i> @ViewBag.Title</a></li>
                        <li class="@(currentTab == "users" ? "active" : "")"><a href="#nav-tab-2" data-toggle="tab"><i class="glyphicon glyphicon-apple"></i> @ResObject.FieldLabel_Organization_Users</a></li>
                        <li class="@(currentTab == "subscriptions" ? "active" : "")"><a href="#nav-tab-3" data-toggle="tab"><i class="glyphicon glyphicon-bell"></i> @ResObject.FieldLabel_Organization_Subscriptions</a></li>
                        <li class="@(currentTab == "modules" ? "active" : "")"><a href="#nav-tab-4" data-toggle="tab"><i class="glyphicon glyphicon-bishop"></i> @ResObject.FieldLabel_Organization_Modules</a></li>
                        <li class="next-button"><a href="javascript:;" data-click="next-tab" class="text-success"><i class="fa fa-arrow-right"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="panel-body panel-form">
                <div class="form-horizontal form-bordered" novalidate>
                    <div class="tab-content">
                        <div class="tab-pane fade @(currentTab == "details" ? "active in" : "")" id="nav-tab-1">
                            <div class="form-horizontal form-bordered" novalidate>
                                @Html.Partial("_ReadOnlyFields")
                            </div>
                        </div>
                        <div class="tab-pane fade @(currentTab == "users" ? "active in" : "")" id="nav-tab-2">
                            <div class="form-horizontal form-bordered" novalidate>
                                @Html.Partial("_OrganizationUsers")
                            </div>
                        </div>
                        <div class="tab-pane fade @(currentTab == "subscriptions" ? "active in" : "")" id="nav-tab-3">
                            <div class="form-horizontal form-bordered" novalidate>
                                @Html.Partial("_OrganizationSubscriptions")
                            </div>
                        </div>
                        <div class="tab-pane fade @(currentTab == "modules" ? "active in" : "")" id="nav-tab-4">
                            <div class="form-horizontal form-bordered" novalidate>
                                @Html.Partial("_OrganizationModules")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
