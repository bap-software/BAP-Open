@using BAP.Resources
@using BAP.eCommerce.Resources
@model BAP.eCommerce.DAL.Entities.ShoppingCart
@{
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = ResObject.EntityLabel_ShoppingCart + " " + Resources.UIText_Details;
}

<!-- begin page-header -->
<h1 class="page-header">
    <a href="@Url.Action("AdminIndex", "ShoppingCarts")" class="btn btn-square btn-default" title="@Resources.UIText_Back"><i class="fa fa-reply"></i></a>
    @ResObject.EntityLabel_ShoppingCart<small></small>
</h1>
<!-- end page-header -->

<!-- MAIN CONTENT SECTION -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                </div>
                <h4 class="panel-title">@ResObject.EntityLabel_ShoppingCart @Resources.UIText_Details</h4>
            </div>
            <div class="panel-body panel-form">
                <div class="form-horizontal form-bordered" novalidate>
                    @Html.Partial("_ReadOnlyFields")
                    @if (Model.ShoppingCartProducts != null && Model.ShoppingCartProducts.Count > 0)
                    {                        
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th><h4><b>@Html.DisplayNameFor(model => model.ShoppingCartProducts)</b></h4></th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Sub Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ShoppingCartProducts)
                                {
                                    <tr>
                                        <td class="col-xs-2">
                                            <span class="cartImage"><img src="@item.Product.ImagePath" alt="@item.Product.ShortDescription" style="height:80px;"></span>
                                        </td>
                                        <td class="col-xs-4">@item.Product.Name</td>
                                        <td class="col-xs-2">$ @item.Product.Price</td>
                                        <td class="col-xs-2">@item.Count</td>
                                        <td class="col-xs-2">$ @item.Subtotal</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }      
                </div>
            </div>
        </div>
    </div>
</div>
