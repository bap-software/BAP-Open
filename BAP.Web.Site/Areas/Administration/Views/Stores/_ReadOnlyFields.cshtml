@model BAP.eCommerce.DAL.Entities.Store

<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-2 col-sm-2">
        @Html.DisplayFor(model => model.Name)
    </div>
    @Html.LabelFor(model => model.IsDefault, htmlAttributes: new { @class = "control-label col-md-1 col-sm-1" })
    <div class="col-md-1 col-sm-1">
        @Html.DisplayFor(model => model.IsDefault)
    </div>
     @Html.LabelFor(model => model.QuickShoppingCart, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-2 col-sm-2">
        @Html.DisplayFor(model => model.QuickShoppingCart)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.ShortDescription, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.ShortDescription)
    </div>
    @Html.LabelFor(model => model.InvoiceTemplate, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.InvoiceTemplate)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.Raw(Model.Description)
    </div>
    @Html.LabelFor(model => model.IsUnregisteredCheckoutAllowed, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-2 col-sm-2">
        @Html.DisplayFor(model => model.IsUnregisteredCheckoutAllowed)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Organization, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.Organization.Name)
    </div>
    @Html.LabelFor(model => model.AdminUser, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.AdminUser.FirstName)
        @Html.DisplayFor(model => model.AdminUser.LastName)
    </div>
</div>

