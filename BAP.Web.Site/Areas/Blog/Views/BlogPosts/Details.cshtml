@using BAP.Resources
@model BAP.DAL.Entities.BlogPost

@{
    ViewBag.Title = Resources.UIText_Details;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var comentCount = 0;
    if (Model.BlogComments != null)
    {
        comentCount = Model.BlogComments.Count;
    }
}

<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <div class="page-title">
                    <h2>@Model.Blog.Name</h2>
                </div>
            </div>
            <div class="col-xs-6">
                <ol class="breadcrumb pull-right">
                    <li>
                        <a href="@Url.Action("Index", "Home", new { Area = "" })">Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Blogs", new { Area = "Content" })">Blogs</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Details", "Blogs", new { Area = "Content", Id = Model.Blog.Id })">@Model.Blog.Name</a>                    
                    </li>
                    <li class="active">@Model.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix blogPage singleBlog">
