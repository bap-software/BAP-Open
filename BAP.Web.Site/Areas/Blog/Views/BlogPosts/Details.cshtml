                        <div class="thumbnail">
                            <img src="@Model.MainImageUrl" alt="blog-image">
                            <div class="caption">
                                <div class="row">
                                    <div class="col-md-3 col-md-push-9 col-sm-4 col-sm-push-8 col-xs-12">
                                        <h5>@Resources.UIText_Details</h5>
                                        <ul class="list-unstyled">
                                            <li><i class="fa fa-user" aria-hidden="true"></i>@Model.Blog.BlogAuthor.NickName</li>
                                            <li><i class="fa fa-calendar" aria-hidden="true"></i>@Model.CreateDate.Value.ToString("MMM") @Model.CreateDate.Value.Day, @Model.CreateDate.Value.Year</li>
                                            <li><i class="fa fa-tags" aria-hidden="true"></i>@Model.Blog.Tags</li>
                                            <li><i class="fa fa-envelope" aria-hidden="true"></i>@comentCount</li>
                                        </ul>
                                        <h5>Share</h5>
                                        <ul class="list-inline">
                                            <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                            <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
