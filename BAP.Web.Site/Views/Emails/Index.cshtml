@model IEnumerable<BAP.DAL.Entities.Message>

@{
    ViewBag.Title = "Emails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.News.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subscriber.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CopyAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlackCopyAddress)
        </th>
