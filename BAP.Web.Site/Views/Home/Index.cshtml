@model BAP.Web.Models.HomeData

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DarkLayout.cshtml";
    ViewBag.Description = "BAP Software, business process management software, home page.";
    ViewBag.SeoKeywords = "business process automation,software development,business requirements,software integration,multi-tenant,responsive design,custom business workflows";
}

<!--Swiper-->
<div id="Home" class="rd-parallax rd-parallax-swiper">
    <div data-speed="0.3" data-sm-speed="1" data-type="html" class="rd-parallax-layer">
        <div data-loop="true" data-height="100vh" data-dragable="false" data-min-height="480px" class="swiper-container swiper-slider">
            <div class="swiper-wrapper text-center">
                <div id="page-loader" data-slide-bg="/Content/Themes/Base/images/intros/intro-04-1920x955.jpg" data-preview-bg="/Content/Themes/Base/images/intros/intro-04-1920x955.jpg" class="swiper-slide">
                    <div data-speed="0.5" data-fade="true" class="swiper-caption swiper-parallax">
                        <div class="swiper-slide-caption">
                            <div class="shell">
                                <div class="range range-lg-center">
                                    <div class="cell-lg-12">
                                        <h1><span data-caption-animate="fadeInUp" data-caption-delay="700" class="big text-uppercase">Welcome to BAP</span></h1>
                                    </div>
                                    <div class="cell-lg-10 offset-top-30">
                                        <h4 data-caption-animate="fadeInUp" data-caption-delay="900" class="hidden reveal-sm-block text-light">
                                            The modern and flexible <i>business automation platform</i> to meet your operational and strategic needs.
                                            Work with us to create exactly what you need with our powerful framework.
                                        </h4>
                                        <div class="group group-xl offset-top-20 offset-xs-top-50">
                                            <a href="/about" data-caption-animate="fadeInUp" data-caption-delay="1200" class="btn btn-primary btn-lg btn-anis-effect"><span class="btn-text">Getting started</span></a>
                                            <a href="http://apps-dev.bap-software.com" data-caption-animate="fadeInUp" data-caption-delay="1200" class="btn btn-default btn-lg btn-anis-effect fadeInUp animated" target="_blank"><span class="btn-text">Demo Application</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div data-slide-bg="/Content/Themes/Base/images/intros/intro-05-1920x955.jpg" data-preview-bg="/Content/Themes/Base/images/intros/intro-05-1920x955.jpg" class="swiper-slide">
                    <div data-speed="0.5" data-fade="true" class="swiper-caption swiper-parallax">
                        <div class="swiper-slide-caption">
                            <div class="shell">
                                <div class="range range-lg-center">
                                    <div class="cell-lg-12">
                                        <h1><span data-caption-animate="fadeInUp" data-caption-delay="700" class="big text-uppercase">Unlimited opportunities</span></h1>
                                    </div>
                                    <div class="cell-lg-10 offset-top-30">
                                        <h4 data-caption-animate="fadeInUp" data-caption-delay="900" class="hidden reveal-sm-block text-light">
                                            BAP is an easy way to help you build modern IT system.
                                        </h4>
                                        <div class="group group-xl offset-top-20 offset-xs-top-50">
                                            <a href="/services" data-caption-animate="fadeInUp" data-caption-delay="1200" class="btn btn-icon btn-icon-left btn-default btn-lg btn-anis-effect"><span class="btn-text">Discover our services</span></a>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div data-slide-bg="/Content/Themes/Base/images/intros/intro-06-1920x955.jpg" data-preview-bg="/Content/Themes/Base/images/intros/intro-06-1920x955.jpg" class="swiper-slide">
                    <div data-speed="0.5" data-fade="true" class="swiper-caption swiper-parallax">
                        <div class="swiper-slide-caption">
                            <div class="shell">
                                <div class="range range-lg-center">
                                    <div class="cell-lg-12">
                                        <h1><span data-caption-animate="fadeInUp" data-caption-delay="700" class="big text-uppercase">RELIABLE & ROBUST</span></h1>
                                    </div>
                                    <div class="cell-lg-10 offset-top-30">
                                        <h4 data-caption-animate="fadeInUp" data-caption-delay="900" class="hidden reveal-sm-block text-light offset-bottom-0">
                                            Excellent combination of all modern technologies to fuel your business.
                                        </h4>
                                        <div class="group group-xl offset-top-20 offset-xs-top-50">
                                            <a href="/pricing" data-caption-animate="fadeInUp" data-caption-delay="1200" class="btn btn-icon btn-icon-left btn-primary btn-lg btn-anis-effect"><span class="icon mdi mdi-cart-outline"></span><span class="btn-text">Buy BAP now</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div data-speed="0.5" class="swiper-button swiper-button-prev swiper-parallax">
                <div class="preview">
                    <div class="preview__img preview__img-3"></div>
                    <div class="preview__img preview__img-2"></div>
                    <div class="preview__img preview__img-1"></div>
                </div>
            </div>
            <div data-speed="0.5" class="swiper-button swiper-button-next swiper-parallax">
                <div class="preview">
                    <div class="preview__img preview__img-1"></div>
                    <div class="preview__img preview__img-2"></div>
                    <div class="preview__img preview__img-3"></div>
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>

</div>

<!-- About Us-->
<section id="AboutUs">
    <!-- Call to action type 2-->
    <section class="section-66 bg-acapulco context-dark">
        <div class="shell">
            <div class="range range-xs-middle range-condensed">
                <div class="cell-md-8 cell-lg-9 text-center text-md-left">
                    <h2><span class="big">BAP is exactly what you need</span></h2>
                </div>
                <div class="cell-md-4 cell-lg-3 offset-top-41 offset-md-top-0">
                    <a href="/pricing" class="btn btn-icon btn-lg btn-default btn-anis-effect btn-icon-left"><span class="icon mdi mdi-cart-outline"></span>Buy BAP now</a>
                </div>
            </div>
        </div>
    </section>
</section>

<!-- About -->
@Html.Partial("_AboutPartial")

<!-- Services -->
<section id="Services" >
    <!-- Call to action type 2-->
    <section class="section-66 bg-acapulco context-dark">
        <div class="shell">
            <div class="range range-xs-middle range-condensed">
                <div class="cell-md-8 cell-lg-9 text-center text-md-left">
                    <h2><span class="big">Our Services</span></h2>
                </div>
            </div>
        </div>
    </section>
</section>
<section  class="section-66 section-collar">    
    <div class="shell shell-wide">        
        @Html.Partial("_ServicesPartial")      
    </div>
</section>
<section style="background: #191919 url(/Content/Themes/Base/images/backgrounds/background-02-481x360.png);" class="section-34 section-top-66 context-dark"><a href="/services" class="btn btn-lg btn-default btn-anis-effect">View all services</a></section>

<!-- Contact Us -->
<section id="ContactUs" >
    <!-- Call to action type 2-->
    <section class="section-66 bg-acapulco context-dark">
        <div class="shell">
            <div class="range range-xs-middle range-condensed">
                <div class="cell-md-8 cell-lg-9 text-center text-md-left">
                    <h2><span class="big">Contact us</span></h2>
                </div>
            </div>
        </div>
    </section>
</section>
@Html.Partial("_ContactPartial")

<!-- Pricing -->
<section id="Pricing" >
    <!-- Call to action type 2-->
    <section class="section-66 bg-acapulco context-dark">
        <div class="shell">
            <div class="range range-xs-middle range-condensed">
                <div class="cell-md-8 cell-lg-9 text-center text-md-left">
                    <h2><span class="big">Our Pricing</span></h2>
                </div>
            </div>
        </div>
    </section>
</section>
@Html.Partial("_PricingPartial")