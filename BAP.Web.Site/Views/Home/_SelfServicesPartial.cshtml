@model BAP.Web.Models.HomeData
<div class="range offset-top-66">
@if (Model.Services != null && Model.Services.Count > 0)
{
    for (int i = 0; i < Model.Services.Count; i++)
    {
        var extraCss = "";
        if (i > 0)
        {
            extraCss = " offset-top-66 offset-md-top-0";
        }

        if (i % 3 == 0 && i > 0)
        {
            <div class="range-spacer veil reveal-md-inline-block offset-top-41 offset-md-top-66"></div>
        }

        <div class="cell-sm-8 cell-sm-preffix-2 cell-md-4 cell-md-preffix-0 @extraCss"  id="S@(Model.Services[i].Id)">
            <!-- Icon Box Type 4--><span class="icon icon-circle icon-bordered icon-lg icon-default icon-filled mdi @Model.Services[i].IconClass"></span>
            <div>
                <h4 class="text-bold offset-top-20">@Model.Services[i].Name</h4>
                <p>@Model.Services[i].Description</p>
            </div>
        </div>
    }
}
</div>
