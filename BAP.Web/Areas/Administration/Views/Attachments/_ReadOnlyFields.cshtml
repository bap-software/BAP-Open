@using BAP.Resources;
@model BAP.DAL.Entities.Attachment

@if (Model.AttachmentType == "photo" || Model.AttachmentType == "image" || Model.AttachmentType == "picture")
{
    <div class="form-group">
        @Html.Label(Resources.FieldLabel_Attachment_Thumbnail, new { @class = "control-label col-md-2 col-sm-2" })
        <div class="col-md-8 col-sm-8">
            <a href="@Url.Action("File", "Home", new { area = "", path = Model.PathUrl })" target="_blank">
                <img class="thumbnail" src="@Url.Action("File", "Home", new { area = "", path = Model.PathUrl })" width="150" />
            </a>
        </div>
    </div>
}
