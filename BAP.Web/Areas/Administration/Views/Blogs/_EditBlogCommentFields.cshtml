@using BAP.Resources
@using BAP.UI.HtmlHelpers
@model BAP.DAL.Entities.BlogComment

<div class="form-group">
    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
    @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4">
        @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Text, DisplayOptions.Humanize, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-10 col-sm-10">
        @Html.TextAreaFor(model => model.Text, htmlAttributes: new { @class = "ckeditor", @placeholder = "Description" })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        <span>@Resources.FieldLabel_BlogComment_Text_MaxCharacters</span>
    </div>
</div>