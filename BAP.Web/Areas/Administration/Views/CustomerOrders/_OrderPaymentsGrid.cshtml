@model BAP.eCommerce.DAL.Entities.CustomerOrder

<style>
    .order-payment-row{
        padding: 10px 10px 10px 10px;
    }
</style>
<div class="order-payments-panel">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            </div>
            <h4 class="panel-title">Payments</h4>
        </div>
        <div class="panel-body panel-form">
            @if(Model.Payments != null && Model.Payments.Count > 0)
            {
                foreach(var item in Model.Payments)
                {
                    <div class="order-payment-row">
                        <span><b>@item.Finished</b> @item.Currency.Symbol@item.Total</span>
                    </div>
                }
            }
            else
            {
                <div class="order-payment-row">
                    <h5>No payments yet for this order</h5>
                </div>                
            }
        </div>
    </div>
</div>
