@model BAP.eCommerce.DAL.Entities.Manufacturer

<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-10 col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ShortDescription, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-10 col-sm-10">
        @Html.DisplayFor(model => model.ShortDescription)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.LogoImage, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @if (Model != null && !string.IsNullOrWhiteSpace(Model.LogoImage))
        {
            <img src="/file/@Model.LogoImage" width="400px" />
        }
    </div>
    @Html.LabelFor(model => model.Slogan, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.Slogan, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-10 col-sm-10">
        @Html.Raw(Model.Description)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ShowIfEmpty, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-8 col-sm-8">
        @Html.DisplayFor(model => model.ShowIfEmpty)
    </div>
</div>
     