@using BAP.Resources
@model BAP.DAL.Entities.Message
@{
    ViewBag.Title = Resources.EntityLabel_Messages + " " + Resources.UIText_Details;
}

<!-- begin page-header -->
<h1 class="page-header">    
    <a href="javascript:window.history.back();" class="btn btn-square btn-default" title="@Resources.UIText_Back"><i class="fa fa-reply"></i></a> 
    @Resources.EntityLabel_Messages<small></small>
</h1>
<!-- end page-header -->
<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse" data-sortable-id="form-stuff-1">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                </div>
                <h4 class="panel-title">@ViewBag.Title</h4>
            </div>
            <div class="panel-body panel-form">
                <div class="form-horizontal form-bordered" novalidate>
                    @Html.Partial("_ReadOnlyFields")
                </div> 
                @using (Html.BeginForm("Resend", "Messages", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group ">
                        <div class="form-actions no-color col-md-offset-2">
                            @Html.HiddenFor(m => m.Id)                            
                            <input type="submit" value="@Resources.UIText_Resend" class="btn btn-success m-r-5 m-b-5" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

