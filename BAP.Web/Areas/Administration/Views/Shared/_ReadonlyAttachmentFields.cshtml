@model BAP.DAL.Entities.Attachment
<div class="row">
    <div class="col-md-3">
        <a href="@Url.Action("File", "Home", new { area = "", path = Model.PathUrl })" target="_blank">
            <img class="thumbnail img-responsive" src="@Url.Action("File", "Home", new { area = "", path = Model.PathUrl })" />
        </a>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                <div class="col-md-3 col-sm-3">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.AttachmentType, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                <div class="col-md-3 col-sm-3">
                    @Html.DisplayFor(model => model.AttachmentType)
                </div>
            </div>
        </div>
    </div>
</div>

