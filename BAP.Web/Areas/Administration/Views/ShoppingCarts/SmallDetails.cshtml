@model BAP.eCommerce.DAL.Entities.ShoppingCart
@{
    Layout = null;
}

    <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-shopping-cart"></i>$@Html.DisplayFor(m => m.Total)</a>
<ul class="dropdown-menu dropdown-menu-right">
    @if (Model != null && Model.ShoppingCartProducts != null && Model.ShoppingCartProducts.Count > 0)
    {
        <li>Item(s) in your cart</li>
        foreach (var item in Model.ShoppingCartProducts)
        {
            <li>
                <a href="@Url.Action("Details", "Products", new { Id = item.ProductId })">
                    <div class="media">
                        <img class="media-left media-object" src="@item.Product.ImagePath" alt="@item.Product.Name image" style="height:50px;">
                        <div class="media-body">
                            <h5 class="media-heading">@item.Product.Name <br><span>@item.Count X $@item.Product.Price</span></h5>
                        </div>
                    </div>
                </a>
            </li>
        }
        <li>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Details", "ShoppingCarts")';">Shopping Cart</button>
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Checkout", "ShoppingCarts")';">Checkout</button>
            </div>
        </li>
    }
    else
    {        
        <li>Your cart is empty</li>
        <li>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Products")';">Go shopping</button>
            </div>
        </li>
    }


</ul>