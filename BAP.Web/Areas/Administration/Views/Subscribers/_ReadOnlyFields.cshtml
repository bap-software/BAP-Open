@using BAP.Lookups
@using BAP.Resources
@model BAP.DAL.Entities.Subscriber
@{
    ILookupEngine engine = ViewBag.LookupEngineInstance;
}

<div class="form-group">
    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-2 col-sm-2">
        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.LabelFor(model => model.Enabled, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-2 col-sm-2">
        @if (Model.Enabled)
        {
            <i class="fa fa-check-square-o" style="font-size:x-large;"></i>
        }
        else
        {
            <i class="fa fa-square-o" style="font-size:x-large;"></i>
        }
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.RegisterDate, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-2 col-sm-2">
        @Html.DisplayFor(model => model.RegisterDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.LabelFor(model => model.PublicId, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-4 col-sm-4">
        @Html.DisplayFor(model => model.PublicId, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.LastNewsletterIdReceived, new { @class = "control-label col-md-2 col-sm-2" })
    <div class="col-md-10 col-sm-10">
        @if (Model.LastNewsletterIdReceived > 0)
        {
        <span>
            @Html.ActionLink(Resources.FieldLabel_Subscriber_LastNewsletterIdReceived, "Details", "NewsLetters", new { id = Model.LastNewsletterIdReceived }, null)
        </span>            
        }

    </div>
</div>
