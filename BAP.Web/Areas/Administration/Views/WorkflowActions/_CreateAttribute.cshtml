@using BAP.Resources
@model BAP.DAL.Entities.WorkflowActionAttribute
@{
    ViewBag.Title = Resources.UIText_Create;
}
<div id="AttributeAddModal" class="modal fade" role="dialog" style="display: none;">
    <div class="modal-dialog modal-entity-select">
        <!-- Modal content-->
        @using (Html.BeginForm("Create", "WorkflowActionAttributes", FormMethod.Post, new { id = "createAttribute", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="ModalTitle">@Resources.UIText_Create @Resources.EntityLabel_WorkflowActionAttribute</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <!-- begin col-12 -->
                        <div class="col-md-12">
                            <div class="panel-body panel-form">
                                <div class="form-horizontal form-bordered" data-parsley-validate="true" name="attribute-form" novalidate>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.WorkflowActionId)
                                    <input type="hidden" id="IsExternalUpdate" name="IsExternalUpdate" value="true" />
                                    @Html.Partial("_EditAttributeFields")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="@Resources.UIText_Create" class="btn btn-default btn-success" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.UIText_Cancel</button>
                </div>
            </div>
        }
    </div>
</div>
