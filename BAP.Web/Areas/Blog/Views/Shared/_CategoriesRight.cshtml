@using BAP.Resources
@using BAP.Web.Areas.BlogsArea.Models
@{
    var blogCategories = new List<BlogCategory>();
    if (ViewBag.Categories != null)
    {
        blogCategories = (List<BlogCategory>)ViewBag.Categories;
    }
}

<div class="section-container">
    <h4 class="section-title"><span>@Resources.FieldLabel_Blog_Categories</span></h4>
    <ul class="sidebar-list">
        @foreach (var blogCategory in blogCategories)
        {
            <li><a href="~/blogs?searchString=@blogCategory.Category.Key">@blogCategory.Category.Text (@blogCategory.BlogNumber)</a></li>
        }
    </ul>
</div>