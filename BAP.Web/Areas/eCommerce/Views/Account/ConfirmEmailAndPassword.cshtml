@using BAP.Resources
@model BAP.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Finish Your Registration";
}

@section featured
{
    <section class="featured-section index">
        <div class="container">
            <div class="wrap clearfix">
                <h1 class="page-title"><span>@ViewBag.Title</span></h1><!-- list of task if need -->
                <p>Your email confirmed, please set your password.</p>
            </div>
        </div>
    </section>
}

@using (Html.BeginForm("ConfirmEmailAndPassword", "Account", new { Area = "eCommerce", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <section class="edit-box">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default btn-primary" value="@Resources.UIText_Ok" />
            </div>
        </div>
    </section>
}
