@using BAP.Resources
@using BAP.UI.HtmlHelpers
@model BAP.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot password";
}

<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix lostPassword">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>@ViewBag.Title</h3></div>
                    <div class="panel-body">
                        @using (Html.BeginForm("ForgotPassword", "Account", new { Area = "eCommerce", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form" }))
                        {
                            @Html.AntiForgeryToken()                            
                            <p class="help-block">Enter the e-mail address associated with your account. Click submit to have your password e-mailed to you.</p>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "" })
                                @Html.BapTextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>                            
                            <button type="submit" class="btn btn-primary btn-block">@Resources.UIText_Submit</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
