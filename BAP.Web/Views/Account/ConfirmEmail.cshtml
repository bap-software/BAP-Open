@{
    ViewBag.Title = "Confirm Registration";
}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>@ViewBag.Title</h3></div>
                    <div class="panel-body">
                        <p class="help-block">Thank you for confirming your email. @Html.ActionLink("Please click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-link" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
