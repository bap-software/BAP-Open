@using BAP.Resources
@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>@ViewBag.Title</h3></div>
                    <div class="panel-body">
                        <p class="help-block">Please check your email to reset your password.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>