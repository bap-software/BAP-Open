@using BAP.Resources
@using BAP.UI.HtmlHelpers
@model BAP.Web.Models.RegisterViewModel
@{
    ViewBag.Title = Resources.UIText_RegisterLink;
}

<div class="content">
    <div class="container">
        <!-- BEGIN breadcrumb -->
        <ul class="breadcrumb m-b-10 f-s-12">
            <li><a href="@Url.Action("Index", "Home", new { Area = "" })">@Resources.UIText_HomePage</a></li>
            <li class="active">@Resources.UIText_RegisterLink</li>
        </ul>
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h4 class="modal-title">@Resources.UIText_RegisterLink <a href="/">@Resources.UIText_ApplicationTitle</a></h4></div>
                    <hr />
                    <div class="panel-body">
                        @using (Html.BeginForm("Register", "Account", new { Area = "", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form" }))
                        {
                            var showExtraLiks = true;
                            if (ViewBag.ShortLoginForms != null && !(bool)ViewBag.ShortLoginForms)
                            {
                                showExtraLiks = false;
                            }

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, Resources.UIText_Review_ValidationErrors, new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName)
                                @Html.BapTextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName)
                                @Html.BapTextBoxFor(m => m.LastName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email)
                                @Html.BapTextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-6">
                                    @if (showExtraLiks)
                                    {
                                        <a href="@Url.Action("Login", "Account", new { Area = "", ReturnUrl = ViewBag.ReturnUrl })" class="btn btn-link btn-block"><span>@Resources.UIText_AlreadyHaveAccount</span> Log in</a>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-theme pull-right">@Resources.UIText_Submit</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
