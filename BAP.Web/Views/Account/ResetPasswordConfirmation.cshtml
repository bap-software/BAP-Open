@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>@ViewBag.Title</h3></div>
                    <div class="panel-body">
                        <p class="help-block">
                            Your password has been reset. @Html.ActionLink("please click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { @id = "loginLink", @class = "btn btn-link" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

